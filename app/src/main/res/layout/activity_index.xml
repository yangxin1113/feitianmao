<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/framelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#EAEAEA"></FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/rl_guide"
                    >


                    <LinearLayout
                        android:id="@+id/bottom_guide"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/bg"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp">

                        <LinearLayout
                            android:id="@+id/ll_home"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >

                            <ImageView
                                android:id="@+id/iv_home"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/icon_shouye_selected" />

                            <TextView
                                android:id="@+id/tv_home"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="4dp"
                                android:text="@string/bottom_shouye_txt"
                                android:textColor="@color/text_bottom_true"
                                android:textSize="@dimen/text_dimens_10"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_tuijian"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginRight="36dp">

                            <ImageView
                                android:id="@+id/iv_tuijian"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/icon_tuijian_normal" />

                            <TextView
                                android:id="@+id/tv_tuijian"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="4dp"
                                android:text="@string/bottom_tuijian_tex"
                                android:textColor="@color/text_bottom_false"
                                android:textSize="@dimen/text_dimens_10"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_find"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginLeft="36dp">

                            <ImageView
                                android:id="@+id/iv_find"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/icon_faxian_normal" />

                            <TextView
                                android:id="@+id/tv_find"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="4dp"
                                android:text="@string/bottom_faxian_txt"
                                android:textColor="@color/text_bottom_false"
                                android:textSize="@dimen/text_dimens_10"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_me"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_me"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/icon_wode_normal" />

                            <TextView
                                android:id="@+id/tv_me"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="4dp"
                                android:text="@string/bottom_wode_txt"
                                android:textColor="@color/text_bottom_false"
                                android:textSize="@dimen/text_dimens_10"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <!--<ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/tiwenbeijing_normal"
                        android:layout_marginBottom="16dp"
                        android:layout_alignBottom="@+id/bottom_guide"
                        android:layout_centerHorizontal="true" />-->

                    <LinearLayout
                        android:id="@+id/ll_ask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bt_tiwen"
                        android:layout_marginBottom="6dp"
                        android:layout_alignBottom="@+id/bottom_guide"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:clickable="true">

                        <!--<ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src=""/>-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="提问"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/text_color1"
                            android:layout_marginTop="36dp"
                            android:textSize="@dimen/text_dimens_10"/>
                        </LinearLayout>
                </RelativeLayout>

            </FrameLayout>


        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>