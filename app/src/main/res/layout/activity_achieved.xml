<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:background="@drawable/img_bg">

            <RelativeLayout
                android:id="@+id/iv_top"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:id="@+id/iv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_fanhui_w"
                    android:padding="12dp"/>

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="我的成就"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_dimens_18" />

            </RelativeLayout>


            <cn.feitianmao.app.widget.CircleImageView
                android:id="@+id/iv_head"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/lena"
                app:border_color="@color/white_bg"
                app:border_width="1dp"
                android:layout_below="@+id/iv_top"/>

            <LinearLayout
                android:id="@+id/ll_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_head"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/iv_head"
                android:layout_toRightOf="@+id/iv_head"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="神奇的五花肉"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_dimens_16"
                    android:textStyle="bold"
                    android:shadowColor="#60000000"
                    android:shadowRadius="10"
                    android:shadowDy="2"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_friends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="656"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_dimens_14"
                        android:shadowColor="#60000000"
                        android:shadowRadius="10"
                        android:shadowDy="2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_dimens_12"
                        android:layout_marginLeft="4dp"
                        android:shadowColor="#60000000"
                        android:shadowRadius="10"
                        android:shadowDy="2"/>

                    <TextView
                        android:id="@+id/tv_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="5200"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_dimens_14"
                        android:shadowColor="#60000000"
                        android:shadowRadius="10"
                        android:shadowDy="2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="粉丝"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_dimens_12"
                        android:shadowColor="#60000000"
                        android:shadowRadius="10"
                        android:shadowDy="2"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_head"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/iv_head"
                android:layout_toRightOf="@+id/iv_head"
                android:text="登录/注册"
                android:textColor="@color/black"
                android:textSize="@dimen/text_dimens_16"
                android:visibility="gone" />

            <View
                android:id="@+id/v_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#40ffffff"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/ll_lan"></View>

            <LinearLayout
                android:id="@+id/ll_lan"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_below="@+id/iv_head"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:background="#16000000">

                <LinearLayout
                    android:id="@+id/ll_zantong"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_dianzan_w" />

                    <TextView
                        android:id="@+id/tv_zantong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="5200"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_dimens_14" />
                </LinearLayout>
                
                <View
                    android:layout_width="1px"
                    android:layout_height="18dp"
                    android:background="#40ffffff"></View>

                <LinearLayout
                    android:id="@+id/ll_shoucang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_shoucang_w"
                        android:layout_marginBottom="1dp"/>

                    <TextView
                        android:id="@+id/tv_shoucang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="360"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_dimens_14" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="18dp"
                    android:background="#40ffffff"></View>

                <LinearLayout
                    android:id="@+id/ll_fenxiang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_fenxiang_w" />

                    <TextView
                        android:id="@+id/tv_fenxaing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="26"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_dimens_14" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


        <View style="@style/line_thin" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/main_bg"></View>

        <View style="@style/line_thin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ll_dongtai"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/select_bg"
                android:clickable="true">

                <TextView
                    android:id="@+id/tv_dongtai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="我的动态"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_dimens_16" />


                <TextView
                    android:id="@+id/tv_dongtaicount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:layout_toLeftOf="@+id/iv_dongtai_jiantou"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_gray1"
                    android:textSize="@dimen/text_dimens_13"
                    android:layout_marginRight="15dp"/>

                <ImageView
                    android:id="@+id/iv_dongtai_jiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/xiangyoujiantou" />

                <View
                    style="@style/line_thin"
                    android:layout_alignLeft="@+id/tv_chengjiu"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/tv_chengjiu"
                    android:layout_marginLeft="12dp"></View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_huida"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/select_bg"
                android:clickable="true">

                <TextView
                    android:id="@+id/tv_huida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="我的回答"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_dimens_16" />

                <TextView
                    android:id="@+id/tv_huidacount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32"
                    android:layout_toLeftOf="@+id/iv_huida_jiantou"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_gray1"
                    android:textSize="@dimen/text_dimens_13"
                    android:layout_marginRight="15dp"/>

                <ImageView
                    android:id="@+id/iv_huida_jiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/xiangyoujiantou" />

                <View
                    style="@style/line_thin"
                    android:layout_alignLeft="@+id/tv_huida"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/tv_guanzhu"></View>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_tiwen"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/select_bg"
                android:clickable="true">

                <TextView
                    android:id="@+id/tv_tiwen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/iv_shoucang"
                    android:text="我的提问"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_dimens_16" />

                <TextView
                    android:id="@+id/tv_tiwencount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:layout_toLeftOf="@+id/iv_tiwen_jiantou"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_gray1"
                    android:textSize="@dimen/text_dimens_13"
                    android:layout_marginRight="15dp"/>

                <ImageView
                    android:id="@+id/iv_tiwen_jiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/xiangyoujiantou" />

                <View
                    style="@style/line_thin"
                    android:layout_alignLeft="@+id/tv_shoucang"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/tv_shoucang"
                    android:layout_marginLeft="12dp"></View>
            </RelativeLayout>


            <View style="@style/line_thin" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
