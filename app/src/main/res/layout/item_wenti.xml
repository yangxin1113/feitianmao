<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app1="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《守望先锋》你最想分享的事是什么?"
                android:textColor="@color/text_nomal"
                android:textSize="@dimen/text_dimens_16"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"/>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="305"
                    android:textColor="@color/text_gray1"
                    android:textSize="@dimen/text_dimens_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:textColor="@color/text_gray1"
                    android:textSize="@dimen/text_dimens_12" />

                <ImageView
                    android:id="@+id/iv_dian"
                    android:layout_toLeftOf="@+id/tv_talkcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/dian"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="212"
                    android:textColor="@color/text_gray1"
                    android:textSize="@dimen/text_dimens_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回答"
                    android:textColor="@color/text_gray1"
                    android:textSize="@dimen/text_dimens_12" />

            </LinearLayout>

    </LinearLayout>
    <ImageView
        style="@style/line_thin"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
