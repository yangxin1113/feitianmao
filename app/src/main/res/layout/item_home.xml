<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app1="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
         style="@style/line_thin" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所属话题:"
            android:textSize="@dimen/text_dimens_14"
            android:textColor="@color/text_color2"/>
        <TextView
            android:id="@+id/tv_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="守望先锋"
            android:textSize="@dimen/text_dimens_14"
            android:textColor="@color/text_color2"
            android:layout_marginLeft="8dp"/>
        </LinearLayout>

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="守望先锋你最想分享的事是什么？"
        android:textSize="@dimen/text_dimens_16"
        android:textColor="@color/text_color3"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:lineSpacingExtra="3dp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/iv_topic_img"
            android:layout_alignParentTop="true"
            android:lineSpacingExtra="3dp"
            android:textSize="@dimen/text_dimens_14"
            android:text="丰塞卡符合双方大方大方卡拉是风景哦撒旦法度搜好丰盛的回佛山喀范德萨发松岛枫松岛枫发士大夫"
            android:maxLines="5"
            android:ellipsize="end"/>

        <!--<ImageView
            android:id="@+id/iv_topic_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:src="@drawable/viewpager1"
            android:layout_marginTop="4dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="15dp"

            />-->

        <cn.feitianmao.app.widget.RoundImageView
            android:id="@+id/iv_topic_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:src="@drawable/viewpager1"
            android:layout_marginTop="1dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="15dp"
            app:type="round"
            app:border_radius="1dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >

        <cn.feitianmao.app.widget.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            app:border_width="0dp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/tv_username"
            android:layout_toRightOf="@+id/iv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="神奇的五花肉"
            android:textSize="@dimen/text_dimens_14"
            android:textColor="@color/text_color2"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_agreecount"
            android:layout_toLeftOf="@+id/tv_zantong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.2K"
            android:textSize="@dimen/text_dimens_14"
            android:textColor="@color/text_color2"
            android:layout_centerVertical="true"
            />
        
        <TextView
            android:id="@+id/tv_zantong"
            android:layout_toLeftOf="@+id/iv_dian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赞同"
            android:textSize="@dimen/text_dimens_14"
            android:textColor="@color/text_color2"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/iv_dian"
            android:layout_toLeftOf="@+id/tv_talkcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/dian"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <TextView
            android:id="@+id/tv_talkcount"
            android:layout_toLeftOf="@+id/tv_pinglun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="156"
            android:textSize="@dimen/text_dimens_14"
            android:textColor="@color/text_color2"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_pinglun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论"
            android:textSize="@dimen/text_dimens_14"
            android:textColor="@color/text_color2"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        </RelativeLayout>

    <ImageView
        style="@style/line_thin" />
</LinearLayout>
