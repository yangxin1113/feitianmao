<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="44dp"
           >

           <ImageView
               android:id="@+id/iv_left"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_centerVertical="true"
               android:src="@drawable/bt_back"
               android:padding="12dp"/>

           <TextView
               android:id="@+id/tv_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerInParent="true"
               android:gravity="center"
               android:text="评论"
               android:textColor="@color/text_gray"
               android:textSize="@dimen/text_dimens_18" />

       </RelativeLayout>
       <View
           style="@style/line_thin"
           ></View>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="60dp"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           android:orientation="vertical">
           
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="手机号"
                   android:textColor="@color/text_nomal"
                   android:textSize="16sp"/>
               
               <EditText
                   android:id="@+id/ed_phone"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="输入11为手机号"
                   android:textColorHint="@color/text_gray2"
                   android:layout_marginLeft="15dp"
                   android:background="@null"
                   android:textSize="16sp"
                   android:textColor="@color/text_gray"
                   android:textCursorDrawable="@null"/>
               </LinearLayout>

           <View
               style="@style/line_thin"
               android:layout_marginTop="10dp"></View>
           </LinearLayout>

       
       <Button
           android:id="@+id/bt_next"
           style="@style/btn_long"
           android:text="@string/next_zh"
           android:layout_marginTop="40dp"/>
       <!--不可用状态    背景  #f0f0f0  文字bdbdbd-->
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="20dp"
           android:gravity="center_vertical">
           <ImageView
               android:id="@+id/iv_check"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_centerVertical="true"
               android:src="@drawable/icon_tongyi_normal"
               android:layout_marginLeft="15dp"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="我已阅读并同意"
               android:textSize="12sp"
               android:layout_marginLeft="10dp"
               android:textColor="@color/text_gray1"/>

           <TextView
               android:id="@+id/tv_disgree"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="《飞天猫用户服务协议》"
               android:textSize="12sp"
               android:textColor="@color/text_gray3"/>

           </LinearLayout>

       </LinearLayout>

</LinearLayout>